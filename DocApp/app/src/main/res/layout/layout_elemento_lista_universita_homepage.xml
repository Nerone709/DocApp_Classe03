<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="190dp"
    android:layout_height="match_parent"
    android:id="@+id/elemento_lista_universita"
    android:layout_gravity="center">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:alpha=".55"
        android:src="@mipmap/university"/>

    <TextView
        android:layout_gravity="center"
        android:id="@+id/testo_universita_elemento_lista"
        android:text="Facolta Prova"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="@color/cardview_light_background"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="8"
        android:textAlignment="center"
        android:textColor="#050A12"
        android:textSize="@dimen/textSize_medium"
        android:textStyle="bold" />


</androidx.cardview.widget.CardView>