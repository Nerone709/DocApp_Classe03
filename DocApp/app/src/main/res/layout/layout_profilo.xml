<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2271b3">

    <LinearLayout
        android:id="@+id/llprofilo"
        android:layout_width="match_parent"
        android:layout_height= "wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:backgroundTint="#2271b3"
            android:text="Profilo"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="@color/white"></TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/interfacciaprofilo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/llprofilo"
        android:layout_centerVertical="true"
        android:layout_marginTop="1dp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/nome_utente"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Utente"
                android:textColor="#2271b3"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="47dp"
                android:layout_marginStart="2dp"
                android:layout_toEndOf="@+id/nome_utente"
                android:clickable="true"
                android:src="@mipmap/carica_foto" />

        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:text="Username: "
            android:textColor="#2271b3"
            android:textSize="30dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/modifica_username"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:singleLine="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="-109dp"
                android:layout_toEndOf="@+id/modifica_username"
                android:text="modifica" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:text="E-mail: "
            android:textColor="#2271b3"
            android:textSize="30dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/modifica_email"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:singleLine="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="-109dp"
                android:layout_toEndOf="@+id/modifica_email"
                android:text="modifica" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:text="Università: "
            android:textColor="#2271b3"
            android:textSize="30dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/modifica_universita"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:singleLine="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="-109dp"
                android:layout_toEndOf="@+id/modifica_universita"
                android:text="modifica" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:text="Facoltà: "
            android:textColor="#2271b3"
            android:textSize="30dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/edit_facolta"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:singleLine="true" />

            <Button
                android:id="@+id/bottone_facolta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="-109dp"
                android:layout_toEndOf="@+id/edit_facolta"
                android:text="modifica" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Documenti caricati da te:"
                android:textColor="#2271b3"
                android:textSize="20dp" />

            <HorizontalScrollView
                android:id="@+id/hsvuniversita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@mipmap/logo"
                        android:text="Immagine 1" />

                    <LinearLayout
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="#2271b3"></LinearLayout>


                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@mipmap/logo"
                        android:text="Immagine 1" />

                    <LinearLayout
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="#2271b3"></LinearLayout>

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@mipmap/logo"
                        android:text="Immagine 1" />

                    <LinearLayout
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="#2271b3"></LinearLayout>

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@mipmap/logo"
                        android:text="Immagine 1" />

                    <LinearLayout
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="#2271b3"></LinearLayout>

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@mipmap/logo"
                        android:text="Immagine 1" />
                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="83dp"
            android:layout_below="@+id/interfacciaprofilo"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:background="#2271b3"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/home" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/carica" />

            <ImageView
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/logo" />

            <ImageView
                android:layout_width="77dp"
                android:layout_height="wrap_content"

                android:src="@mipmap/profilo" />

            <ImageView
                android:layout_width="91dp"
                android:layout_height="wrap_content"

                android:src="@mipmap/chat" />


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>